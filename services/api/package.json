    "chromadb": "1.9.1",
    "cookie-parser": "^1.4.6",
    "coralogix-logger": "^1.1.28",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv-cli": "^7.4.2",
    "express": "4.20.0",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "langchain": "^0.0.209",
    "langfuse": "^2.3.4",
    "langfuse-langchain": "^2.3.4",
    "llamaindex": "^0.1.16",
    "mongoose": "^8.0.2",
    "mongoose-field-encryption": "^7.0.1",
